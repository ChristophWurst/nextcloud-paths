{
  "name": "@nextcloud/paths",
  "version": "2.1.0",
  "description": "Helper functions for working with paths in Nextcloud apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "babel ./lib --out-dir dist --extensions '.ts,.tsx' --source-maps && tsc --emitDeclarationOnly",
    "build:doc": "typedoc --out dist/doc lib/index.ts && touch dist/doc/.nojekyll",
    "check-types": "tsc",
    "dev": "babel ./lib --out-dir dist --extensions '.ts,.tsx' --watch",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "keywords": [
    "nextcloud"
  ],
  "homepage": "https://github.com/nextcloud-libraries/nextcloud-paths#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextcloud-libraries/nextcloud-paths"
  },
  "author": "Christoph Wurst",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "core-js": "^3.37.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@nextcloud/browserslist-config": "^3.0.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ],
  "engines": {
    "node": "^20.0.0",
    "npm": "^9.0.0 || ^10.0.0"
  }
}
